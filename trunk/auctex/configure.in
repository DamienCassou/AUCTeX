ifelse(regexp(AC_ACVERSION,[^2\.[01][0-9]?[^0-9]*$]),-1,
  [AC_INIT(auctex,11.14,auc-tex@sunsite.dk)],
  [AC_INIT(auctex.spec)])

AC_SET_MAKE
AC_PROG_INSTALL
AC_PROG_EMACS

packagedir=
if test $EMACS_FLAVOR = "xemacs"  ; then
   AC_PATH_PACKAGEDIR([tex-site])
   AC_MSG_CHECKING([where lisp files go])
   AC_EMACS_LISP(lispdir,[(condition-case nil \ 
                             (progn (require 'tex-site ) TeX-lisp-directory)
                             (error \"${packagedir}/lisp/auctex\"))], quiet)
   AC_MSG_RESULT([${lispdir}])
   infodir="${packagedir}/info"
else
   AC_PATH_LISPDIR([tex-site])
fi
AC_SUBST(packagedir)

AC_OUTPUT(Makefile)
cat >&2 <<EOF

Congratulations!  Configuration is complete.

Type "make" at the prompt to build preview.
EOF
